<h2>Sign up</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="field">
        <%= f.label :name, class: "col-md-4" %>
        <%= f.text_field :name, class: "col-md-8" %>
      </div>
    
      <div class="field">
        <%= f.label :email, class: "col-md-4" %>
        <%= f.email_field :email, autofocus: true, class: "col-md-8" %>
      </div>
    
      <div class="field">
        <%= f.label :password, class: "col-md-4" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "col-md-8" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation, class: "col-md-4" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-md-8" %>
      </div>
    
      <div class="actions col-md-6">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div> 
</div>
