<h1>Users</h1>
<table class="table table-bordered table-hover">
  <thead>
    <thead>
      <tr>
        <th>Name</th><th>Email</th><th>Role</th>
      </tr>
    </thead>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
        <td><%= link_to user.name, show_user_path(user.id) %></td>
      <td><%= user.email %></td>
      <td><%= user.roles.first.name if user.roles.first.presence %></td>
      <td>
        <%= form_tag("/admin/user/" + user.id.to_s, method: :PUT) do %>
            <%= submit_tag is_admin(user) %>
        <% end %>
        <%= button_to "Delete User", delete_user_path(user.id), data: { confirm: "Are you sure?" }, method: :delete %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
