<p id="notice"><%= notice %></p>
<h1>Categories</h1>
<%= link_to "Add new category", new_fd_type_path %>
<table class="table table-bordered table-hover">
  <thead>
    <thead>
      <tr>
        <th>Food</th>
      </tr>
    </thead>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
    <% if category.foodtype.eql?("food") %>
        <tr>
            <td><%= link_to category.name, fd_type_path(category.id) %></td>
            <td>
                <%= link_to 'Edit', edit_fd_type_path(category.id) %>
                <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
        </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

